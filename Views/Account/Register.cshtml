@{
    Layout = null;
}
@model WebVuiVN.Models.ViewModels.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <link rel="apple-touch-icon icon" href="~/Socialnetwork/img/favivon.jpg">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,600,700" rel="stylesheet">
    <!--<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">-->
    <!--<link rel="stylesheet" href="css/animate.min.css">-->
    <!--<link href="https://unpkg.com/ionicons@4.5.5/dist/css/ionicons.min.css" rel="stylesheet">-->
    <link rel="stylesheet" href="~/Socialnetwork/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Socialnetwork/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Socialnetwork/css/main.css">
</head>
<body class="page-login logged-out page-signup page-signup--v2">
    <header class="header py-4 bg-dark text-white">
        <div class="container py-1">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="brand">
                    <a href="/">
                        <img src="~/Socialnetwork/img/logo.png" alt="JAIZER LOGO" class="img-fluid">
                    </a>
                </div>
                <div>
                    <div class="login-form">
                        <form class="form-inline justify-content-end" action="~/Account/Login" method="post">
                            <div class="input-group">
                                <label class="sr-only" for="inlineFormInputName2">Email</label>
                                <input type="text" class="form-control mr-sm-2" placeholder="Jane Doe" name="Email">
                            </div>
                            <div class="input-group mr-sm-2">
                                <label class="sr-only" for="loginpassword">Passsword</label>
                                <input type="password" class="form-control" id="loginpassword" placeholder="password" name="Password">
                            </div>
                            <button type="submit" class="btn btn-outline-secondary text-white border-white fs-12">Sign In</button>
                        </form>
                        <div class="password-reset">
                            <a href="#" class="text-white fs-12">Forgot Password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end container -->
    </header>

    <main class="main-content d-flex mt-4">
        <!-- ============  content =============== -->
        <!--left column-->
        <div class="w-50 left-col bg-white d-flex justify-content-center align-items-center flex-column">
            <div class="left-col-wrap text-center text-white">
                <img src="~/Socialnetwork/img/form-left.png" alt="" class="img-fluid">
            </div>
        </div>
        <!--right column-->
        <div class="w-50 right-col px-5 d-flex justify-content-start align-items-center flex-wrap">
            <div class="right-col-wrap">
                <h2 class="h3 font-weight-bold">Create an account</h2>
                <p>See what’s happening in the world right now</p>
                <form class="fs-14 my-4 py-2" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Full Name:</label>
                            <input type="text" asp-for="FullName" name="fullName" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="text" asp-for="Email" name="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input type="password" asp-for="Password" name="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password:</label>
                        <input type="password" asp-for="ConfirmPassword" name="confirmPassword" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Phone Number:</label>
                        <input type="text" name="phoneNumber" asp-for="PhoneNumber" class="form-control">
                    </div>
                    <div class="form-row disclaimer fs-12 mb-4 text-light">
                        <div class="form-group">
                            By clicking Sign Up, you agree to our Terms, Data Policy and Cookie Policy.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark fs-14 text-white px-5"><i class="fa fa-user"></i>&nbsp; <span>Register</span></button>
                </form>
            </div>
            <!--right col wrap end-->
        </div>
        <!--right col end-->
    </main>
    <footer class="footer-links w-100 fs-12 d-flex justify-content-center flex-wrap">
        <a href="/Account/About" class="footer-links-item">About</a>
    </footer>


    <!--<script src="js/vendor/jquery.min.js"></script>-->
    <!--<script src="js/vendor/popper.js"></script>-->
    <!--<script src="js/vendor/bootstrap.min.js"></script>-->
    <!--<script src="js/vendor/owl.carousel.min.js"></script>-->
    <!--<script src="js/main.min.js"></script>-->

</body>
</html>




